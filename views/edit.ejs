<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>
<form class="ui form" action="/blogs/<%= blogs._id %>?_method=PUT" method="post">
  <div class="field">
    <label>Blog Title</label>
    <input type="text" name="blogs[title]" placeholder="Title" value="<%= blogs.title %>">
  </div>
  <div class="field">
    <label>Enter Image URL</label>
    <input type="text" name="blogs[image]" placeholder="Image URL" value="<%= blogs.image %>">
  </div>
  <div class="field">
     <label>Blog post</label>
 <textarea name="blogs[body]" placeholder="type post here"><%= blogs.body %></textarea>
  </div>
  <br>
  <button class="ui button" type="submit">Submit</button>
</form>
</div>
<% include ./partials/footer %>